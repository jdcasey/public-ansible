---
send: carbon
recv: mqtt

carbon:
  host: {{ graph_server }}
  port: 2023

mqtt:
    host: {{ mqtt_host }}
    port: {{ mqtt_port }}
    username: {{ mqtt_user }}
    password: {{ mqtt_password }}
    topic: {{ mqtt_topic }}
